{
  "name": "test-ecosystem-ci",
  "type": "module",
  "version": "0.0.3",
  "packageManager": "pnpm@10.21.0",
  "description": "Run CI across the ecosystem",
  "author": "Augustin Mercier <gugustinette@proton.me>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/gugustinette",
  "homepage": "https://github.com/gugustinette/ecosystem-ci#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gugustinette/ecosystem-ci.git"
  },
  "bugs": {
    "url": "https://github.com/gugustinette/ecosystem-ci/issues"
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "ecosystem-ci": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "tsdown && clear && node ./dist/cli.mjs",
    "test": "pnpm run build && vitest",
    "test:run": "pnpm run build && vitest run",
    "typecheck": "tsc --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "ansis": "^4.2.0",
    "cac": "^6.7.14",
    "giget": "^2.0.0",
    "unconfig-core": "^7.4.2",
    "unrun": "^0.2.21"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^7.4.4",
    "@sxzz/prettier-config": "^2.2.6",
    "@types/node": "^24.10.4",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "obug": "^1.0.2",
    "prettier": "^3.7.4",
    "tsdown": "^0.16.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "prettier": "@sxzz/prettier-config"
}
